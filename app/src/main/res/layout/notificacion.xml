<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fondo"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/redbg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:id="@+id/cuadro"
        android:background="@drawable/popup"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="177dp" />



    <ImageView
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/botonaceptar"
        android:onClick="comenzarTimer"
        android:background="@drawable/aceptar"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/cuadro"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/rechazar"
        android:id="@+id/botonrechazar"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/botonaceptar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Te recomendamos dejar de estudiar por:\n 5 min"
        android:textColor="#000000"
        android:textSize="10pt"
        android:id="@+id/texto"
        android:layout_below="@+id/icono"
        android:layout_alignLeft="@+id/botonaceptar"
        android:layout_alignRight="@+id/botonaceptar" />

</RelativeLayout>